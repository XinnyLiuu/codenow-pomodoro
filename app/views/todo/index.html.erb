<h1>
    <img class="company-logo" src="https://public.3.basecamp.com/p/iahgNshn1oKq98sWGf1q89Vo/uploads/511042491/download/CodeNow%20Logo.png"></img>
    Todo List
</h1>

<% @todos.each do |todo| %>
    <ul>
        <li>
            <input type="checkbox">
            <a href="/todo/show/<%= todo.id %>">
                <%= todo.description %>
            </a>
            <span class="pomodoro-estimate small-pomodoro-estimate">
                <%= todo.pomodoro_estimate %> pomodoros
            </span>
        </li>
    </ul>
<%end%>
     
<form class="form-center" action="/todo/create">
    <input class="text-input" name="description" id="new-todo-description" type="text" placeholder="Add a New Todo ..."> 
    <input class="text-input" name="pomodoro-estimate" id="new-pomodoro-estimate" type="number" placeholder="Pomodoro Estimate ...">
    <input class="button" id="add-new-todo-button" type="submit" value="Add Todo">
</form>
